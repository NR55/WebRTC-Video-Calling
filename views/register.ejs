<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Register</title>
  <style>
    /* Add your internal CSS styles here */
    .form-group {
      display: flex;
      align-items: center;
      margin-bottom: 0;
    }

    .form-group label {
      margin-right: 10px;
      padding: 0;
      vertical-align: middle;
    }
  </style>
  <link rel="stylesheet" href="/style.css">
</head>

<body>
  <div class="form-container">
    <h2>Register</h2>
    <% if (error) { %>
      <p class="message">
        <%= error %>
      </p>
      <% } %>
        <form action="/register" method="post">
          <div class="form-group">
            <input type="text" name="username" placeholder="Username" required />
          </div>
          <div class="form-group">
            <input type="email" name="email" placeholder="Email" required />
          </div>
          <div class="form-group">
            <input type="password" name="password" placeholder="Password" required />
          </div>
          <div class="form-group">
            <label for="premium">Premium:</label>
            <div class="form-check form-check-inline">
              <input type="checkbox" class="form-check-input" id="premiumCheck" name="premiumCheck" />
              <input type="hidden" name="premiumOutput" id="premiumOutput" value="false" />
            </div>
          </div>
          <div class="form-group">
            <input type="text" name="UPI_ID" id="upi_id" placeholder="Your UPI ID" style="display: none;" />
          </div>
          <button type="submit" class="submit-btn">Register</button>
        </form>
        <p>Already have an account? <a href="/login">Login</a></p>
  </div>
  <script>
    document.getElementById('premiumCheck').addEventListener('change', function () {
      var UPIInput = document.getElementById('upi_id');
      var premiumVal = document.getElementById("premiumOutput");
      UPIInput.style.display = this.checked ? 'block' : 'none';
      UPIInput.required = this.checked;
      premiumVal.value = this.checked ? 'true' : 'false';
    });
  </script>
</body>

</html>