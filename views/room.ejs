                    aria-hidden="true" style="z-index: 2000;">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="exampleModalLabel">Room Info</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <div class="container">
                                    <h4>Hi <%=username%>!</h4>
                                    <label for="copyTarget" style="font-family: system-ui;">Room ID</label>
                                    <div class="input-group">
                                        <span id="copyButton" class="input-group-addon btn" title="Click to copy"
                                            onclick="copyContent()">
                                            <i class="fa fa-clipboard" aria-hidden="true"></i>
                                        </span>
                                        <input type="text" readonly id="copyTarget" class="form-control">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <script>
        function leaveRoom() {
            window.location.href = "/lobby";
        }
        function toggleChat() {
            var chatContainer = document.getElementById('chat-container');
            chatContainer.classList.toggle('chat-open');
        }
        document.getElementById("copyTarget").value = ROOM_ID;

        function copyContent() {
            // Get the text field
            var copyText = document.getElementById("copyTarget");

            // Select the text field
            copyText.select();
            copyText.setSelectionRange(0, 99999); // For mobile devices

            // Copy the text inside the text field
            navigator.clipboard.writeText(copyText.value);
        }
    </script>

</body>
</html>
