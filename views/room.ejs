    <style>
        /* Add custom tooltip */
        video[data-username]::after {
            content: attr(data-username);
            position: absolute;
            bottom: -25px;
            /* Adjust the position of the tooltip as per your layout */
            left: 50%;
            transform: translateX(-50%);
            padding: 5px;
            background-color: rgba(0, 0, 0, 0.8);
            color: #fff;
            border-radius: 5px;
            white-space: nowrap;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        video[data-username]:hover::after {
            opacity: 1;
        }

        .grid-container {
            display: grid;
            width: 1200px;
            height: 700px;
            gap: 2rem;
            margin-top: 20px;
        }

        .grid-container--fit {
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        }

        .grid-container>video {
            width: 95%;
            padding: 2px;
            max-height: 100%;
            border: solid 1px;
            border-radius: 5%;
            z-index: -1;
        }

        #video-grid1 {
            position: fixed;
            bottom: 0;
            right: 0;
            width: 275px;
            /* Adjust width as needed */
            height: 180px;
            z-index: 1001;
            margin-bottom: 10px;
        }

        #video-grid1 video {
            height: 180px;
            border: solid 2px;
            border-radius: 10px;
        }

        .chat-container {
            position: fixed;
            top: 0;
            right: -310px;
            /* Initially hide the chat box */
            width: 300px;
            height: 100%;
            background-color: white;
            z-index: 1000;
            transition: right 0.3s ease;
            /* Add transition effect */
        }

        .chat-open {
            right: 0;
            /* Show the chat box */
        }

        .chat-container {
            display: flex;
            flex-direction: column;
            height: 75%;
            /* Ensure the container takes the full height */
            margin-right: 10px;
        }

        #chat {
            flex-grow: 1;
            /* Allow the chat area to grow and occupy remaining space */
        }

        #chat-form {
            margin-top: auto;
            /* Push the form to the bottom */
        }

        .but-container {
            margin-top: auto;
            margin-bottom: 2rem;
        }
    </style>
</head>

